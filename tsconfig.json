{
  "include": ["NetscriptDefinitions.d.ts", "src/**/*"],
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "inlineSourceMap": false,
    "strict": true,
    "rootDir": "src/",
    "baseUrl": "src/",
    "allowJs": true,
    "jsx": "react",
    "paths": {
      "/*": ["*"],
      "@ns": ["../NetscriptDefinitions.d.ts"],
      "@react": ["lib/react.ts"]
    }
  }
}
